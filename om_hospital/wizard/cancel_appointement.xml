<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_cancel_appointement_form" model="ir.ui.view">
        <field name="name">cancel.appointement.wizard.form</field>
        <field name="model">cancel.appointement.data.wiz</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="appointement_id"/>
                        <field name="reason"/>
                    </group>
                    <group>
                        <field name="date_cancel"/>
                    </group>
                </group>
                <footer>
                    <button name="action_cancel" string="cancel appointement" type="object" class="btn-primary"
                            data-hotkey="q"></button>
                    <button string="close" class="oe_link" special="cancel"></button>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_hospital_cancel" model="ir.actions.act_window">
        <field name="name">cancel appointement</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">cancel.appointement.data.wiz</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_cancel_appointement_form"></field>
        <field name="target">new</field>
    </record>
</odoo>