<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">

        <!--        To shows the amount in words on the invoice send mail-->
        <record id="appointement_mail_template" model="mail.template">
            <field name="name">appointement template</field>
            <field name="model_id" ref = "om_hospital.model_hospital_appointement"> </field>
            <field name="subject" > appointement details  {{object.reference}}</field>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{object.patient_id.email}}</field>

            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <div>
                        <h2>
                            Hi,
                            <t t-out="object.patient_id.name or ''"/>
                        </h2>
                        <div>
                            <h3>
                                This is demo mail send to you for to inform you that
                                your appointement has been successfully booked on <t t-out="object.date"/>
                            </h3>
                        </div>
                    </div>
                    <br/>
                    <br/>
                    Regards,
                    <br/>
                    <t t-out="user.name"/>
                    <br/>
                </div>
            </field>
        </record>

    </data>
</odoo>