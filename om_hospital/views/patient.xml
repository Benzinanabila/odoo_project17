<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
       <record id="view_hospital_patient_tree" model="ir.ui.view">
            <field name="name">hospital.patient.tree</field>
            <field name="model">hospital.patient</field>
            <field name="priority" eval="10"/>
            <field name="arch" type="xml">
                <tree string="patients" create="1">
                    <field name="name"/>
                    <field name="date_of_birth" optional="show"/>
                    <field name="age"/>
                    <field name="gender" optional="hide"/>
                    <field name="phone"/>
                    <field name="tags_ids"/>
                </tree>
            </field>
       </record>
       <record id="view_hospital_patient_form" model="ir.ui.view">
            <field name="name">hospital.patient.form</field>
            <field name="model">hospital.patient</field>
            <field name="arch" type="xml">
                <form string="patients">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>

                                <field name="name"/>
                                <field name="date_of_birth"/>
                                <field name="age"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                <field name="email"/>
                                <field name="phone" widget="phone"/>
                                <field name="tags_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>

            </field>
       </record>
       <record id="action_hospital_patient" model="ir.actions.act_window">
           <field name="name">Patients all access</field>
           <field name="res_model">hospital.patient</field>
           <field name="view_mode">tree,form</field>
           <field name="view_id" ref="view_hospital_patient_tree"/>
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">Create a new patient </p>
           </field>
       </record>
    </data>
</odoo>