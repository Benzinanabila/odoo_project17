<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <data>
       <record id="view_hospital_appointement_line_tree" model="ir.ui.view">
            <field name="name">hospital.appointement.line.tree</field>
            <field name="model">hospital.appointement.line</field>
            <field name="arch" type="xml">
                <tree string="appointements line" editable="top">
                    <field name="appointement_id"/>
                    <field name="product_id"/>
                    <field name="qty"/>
                </tree>
            </field>
       </record>

       <record id="action_hospital_appointement_line" model="ir.actions.act_window">
           <field name="name">hospital appointement line</field>
           <field name="res_model">hospital.appointement.line</field>
           <field name="view_mode">tree</field>
<!--           <field name="inherit_id" ref="product.product_template_only_form_view"/>-->
           <field name="help" type="html">
               <p class="o_view_nocontent_smiling_face">Create a new appointement line</p>
           </field>
       </record>
    </data>
</odoo>